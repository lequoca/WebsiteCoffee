@model WebsiteCoffee.Models.DonHang
@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Shared/Layout.cshtml";
}


<div class="container">

    <!-- Chi tiết đơn hàng -->
    <h4>Chi Tiết Đơn Hàng</h4>
    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Đơn Giá</th>
                    <th>Thành Tiền</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ChiTietDonHang != null && Model.ChiTietDonHang.Any())
                {
                    foreach (var item in Model.ChiTietDonHang)
                    {
                        <tr>
                            <td>@item.SanPham.TenSanPham</td>
                            <td>@item.SoLuong</td>
                            <td>@String.Format("{0:0,0}", item.DonGia) VNĐ</td>
                            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Không có dữ liệu chi tiết đơn hàng.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
